include block_html/_style.pug
include block_html/_include.pug

.page
	.page-head
		+header()
	.page-content
		.main-cont
			.bread-row
				.bread-title Заголовок
				.bread
					a(href="#").bread__el Главная
					.bread__el Корзина
				a(href="#").page-nav
					.page-nav__icon
						+icon("arrow-back","icon")
					.page-nav__text на главную
			.title.title--mobile
				span Корзина
		.main-cont
			.basket-wrap
				.basket-list
					- for (var j=0;j<8;j++)
						.basket-el
							.basket-el__img(style="background-image:url('img/card-image-1.jpg')")
							.basket-el__info
								a(href="#").basket-el__title
									span Жаренный ролл с х/к лососем и креветкой
								.ingr-list
									- for (var i=0;i<9;i++)
										.ingr
											span Терияки
											+icon("close","icon")
									.basket-ingr-add.modal-get(data-modal="ingr")
										+icon("plus","icon")
							.basket-el__incr
								+incr()
							.basket-el__price 1299р
							.basket-el__remove
								+icon("garbage","icon")
					.basket-empty.basket-empty--hidden
						.basket-empty__icon
							+icon("cart","icon")
						.basket-empty__title Ваша корзина пуста =(
						.basket-empty__text Добавьте что-нибудь из меню
						a(href="#").basket-empty__get Вернуться в меню
					.snacks
						.snacks-text На каждые 500 рублей идёт бесплатная порция имбиря и васаби
						- for (var i=0;i<2;i++)
							.snacks-row
								.snacks-row__img(style="background-image:url('img/snack.jpg')")
								.snacks-row__number x 3
								a(href="#").snacks-row__name
									span Васаби
								.snacks-row__text бесплатно
								.snacks-row__remove
									+icon("garbage","icon")

				.basket-info
					.basket-cost
						.basket-title сумма заказа
						.basket-price 1498р
						.basket-sale
							.basket-sale__text скидка
							.basket-sale__val -100р
					.basket-promo
						//toggle class .basket-promo__input--true .basket-promo__input--false
						.basket-promo__input
							+icon("checked","icon icon-true")
							+icon("close","icon icon-false")
							form(action="#")
								input(type="text" placeholder="промокод" class="input")
					.basket-descr Вячеслав, на вашем счету 250 бонусных баллов, которые вы можете потратить на заказ
					.basket-enter
						span.basket-auth Войдите или зарегистрируйтесь
						| чтобы иметь возможность получить кешбек от заказа в виде балов.
					.basket-code
						form(action="#")
							input(type="text" placeholder="Сколько баллов тратим?" class="input")
					a(href="#").basket-deliver
						span Условия доставки и оплаты
					.basket-get оформить заказ
			.add-list-wrap
				.title--sm Напитки и соусы к вашим блюдам
				.add-list
					- for (var i=0;i<5;i++)
						+item-small()
	.page-footer
		+footer()
include ./block_html/_script.pug
