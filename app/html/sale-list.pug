include block_html/_style.pug
include block_html/_include.pug

.page
	.page-head
	+header()

	.page-content
		.main-cont
			.bread-row
				.bread-title Заголовок
				.bread
					a(href="#").bread__el Главная
					.bread__el Акции
				a(href="#").page-nav
					.page-nav__icon
						+icon("arrow-back","icon")
					.page-nav__text на главную

			.title.title--mobile
				span Акции

			.discount-list
				- for (var i=0;i<8;i++)
					.discount-list__el
						.discount-list__img(style="background-image:url('img/sale-item.jpg')")
						.discount-list__info
							.discount-list__time действует в будни с 13 до 16
							.discount-list__title Популярныe блюда с 13 до 16 по цене всего от 119 рублей
							.discount-list__decr Акция ежемесячная по будням, кроме праздничных дней. Акция действует в будни с 13:00 до 16:00. Осуществить заказ блюд по акции в другое время невозможно. Действует на самовывоз, доставку и в зале. Не действует в праздничные и предпраздничные дни.
			+addtext()

.page-footer
	+footer()
include ./block_html/_script.pug
