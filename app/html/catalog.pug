include block_html/_style.pug
include block_html/_include.pug

.page
	.page-head
		+header()
	.page-content
		.main-cont
			.bread-row
				.bread-title Заголовок
				.bread
					a(href="#").bread__el Главная
					.bread__el Оформление заказа
				a(href="#").page-nav
					.page-nav__icon
						+icon("arrow-back","icon")
					.page-nav__text на главную
			.title.title--mobile
				span Каталог
			.catalog-sort
				.catalog-sort__name Сортировка:
				select.select-beauty
					option(value="1" ) По умолчанию
					option(value="2") Сначала дешевле
					option(value="3") Сначала дороже
			.catalog-filter
				.catalog-filter__icon
					+icon("filter","icon")
				span Фильтры
			.catalog
				.catalog-tool
					.catalog-tool__row
						.catalog-tool__title Цена
						.range-wrap
							input(type="range" class="catalog-range" data-min="200" data-max="1000" data-from="300" data-to="900")
					.catalog-tool__row
						.catalog-tool__title Теги
						.catalog-tool-tag
							.catalog-tool-tag__el.catalog-tool-item
								+icon("like--color","icon")
								span хит
							.catalog-tool-tag__el.catalog-tool-item
								+icon("star--color","icon")
								span новинка
							.catalog-tool-tag__el.catalog-tool-item
								+icon("sale--color","icon")
								span акция
							.catalog-tool-tag__el.catalog-tool-item
								+icon("hot--color","icon")
								span острое
							.catalog-tool-tag__el.catalog-tool-item
								+icon("veg--color","icon")
								span вегетарианское
					.catalog-tool__row
						.catalog-tool__title Ингредиенты
						.catalog-tool-ingr
							- for (var j=0;j<4;j++)
								.catalog-tool-ingr__el.catalog-tool-item
									.catalog-tool-ingr__img(style="background-image:url('img/ingr.jpg')")
									.catalog-tool-ingr__name курица
					.catalog-tool__row
						.catalog-tool__title Исключить
						+checkbox('лук')
						+checkbox('оливки')
						+checkbox('томаты')
					.catalog-tool__get Применить фильтр
					.catalog-tool__clear Сбросить фильтр
				.catalog-wrap
					- for (var i=0;i<9;i++)
						+item()


			//sale
			.title Акции
			.sale-list
				- for (var i=1;i<7;i++)
					a(href="#" style="background-image:url('img/sale-"+i+".jpg')").sale-list__el
						.sale-list__el-filter
						.sale-list__el-title
							span популярныe блюда с 13:00 до 16:00 по цене всего от 119 рублей
	.page-footer
		+footer()
include ./block_html/_script.pug
