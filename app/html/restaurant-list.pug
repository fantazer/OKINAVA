include block_html/_style.pug
include block_html/_include.pug

.page
	.page-head
		+header()
	.page-content
		.main-cont
			.bread-row
				.bread-title Заголовок
				.bread
					a(href="#").bread__el Главная
					.bread__el Кафе
				a(href="#").page-nav
					.page-nav__icon
						+icon("arrow-back","icon")
					.page-nav__text на главную
			.title.title--mobile
				span Кафе
		.main-cont
			.cafe-wrap
				.cafe-get
					h2 Забронировать столик
					form(action="#")
						.input-row
							select.select-beauty
								option ул. Университетская, д. 10
								option ул. Университетская, д. 11
								option ул. Университетская, д. 12
						.input-row
							input(type="text" placeholder="Имя" class="input")
						.input-row
							input(type="text" placeholder="Телефон" class="input")
						.input-row
							input(type="text" placeholder="Дата бронирования" class="input")
						.input-row-half
							.input-wrap
								select.select-beauty
									option 10:00
									option 10:30
									option 11:00
									option 10:00
									option 10:30
									option 11:00
							.input-wrap
								select.select-beauty
									option 1 чел
									option 2 чел
									option 3 чел
						.input-row
							textarea(name="info", cols="30", rows="10" placeholder="Сопроводительное письмо" class="input")
						input(type="submit" value="Отправить" class="btn--md btn--mark btn--full")
				.cafe-content
					.cafe-tab
						.cafe-tab__el.cafe-tab__el--active на карте
						.cafe-tab__el списком
					.cafe-tab-info.cafe-tab-info--active
						.cafe-map
							.cafe-map__el
								script(type="text/javascript" charset="utf-8" async src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3AwkF1GhSDg4kZ3hDsyV_PPciU2OtbJsK4&amp;width=100%&amp;height=100%&amp;lang=ru_RU&amp;scroll=false" )
					.cafe-tab-info
						.cafe-list
							- for (var k=0;k<9;k++)
								a(href="#" class="cafe-list__el")
									.cafe-list__el-wrap
										.cafe-list__el-img(style="background-image:url('img/cafe.jpg')")
										.cafe-list__el-content
											.cafe-list__el-title
												span ул. Университетская, д. 10
											.cafe-list__el-adr Пн-Пт: 10-22
											.cafe-list__el-adr Сб-Вс: 10-24

			+addtext()
	.page-footer
		+footer()
include ./block_html/_script.pug
