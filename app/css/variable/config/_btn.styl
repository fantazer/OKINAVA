// ============================ Buttons ============================
.btn
	br(20px)
	tr(all)
	display inline-block
	background none
	border 0
	text-align: center
	text-decoration: none
	&:hover
		cursor pointer
		bsh-hover()

.btn--sm
	@extend .btn
	font-size 10px
	padding 5px 10px

.btn--md
	@extend .btn
	padding 13px 25px

.btn--lg
	@extend .btn
	font-size 20px
	padding 10px 30px

.btn--mobile
	@extend .btn
	+below(768px)
		width 100%
		text-align center

.btn--mark
	@extend .btn
	color white
	background $mark
	.nav-icon
		fill white
	&:hover
		background-color darken($mark,5)
		color white!important
	&:active
		background-color darken($mark,5)
		color white!important
	input[type="submit"]
		border 0
	.nav-icon
		fill white


.btn--green
	@extend .btn
	color white
	background $green
	.nav-icon
		fill white
	&:hover
		background-color darken($green,5)
		color white!important
	&:active
		background-color darken($green,5)
		color white!important
	input[type="submit"]
		border 0
	.nav-icon
		fill white

.btn--disable
	@extend .disabled
	border 1px solid $border-color
	background-color #ffffff
	color #000000

.btn--white
	@extend .btn
	border 1px solid $border-color
	background-color #ffffff
	&:hover
		border 1px solid $mark
	.nav-icon
		fill $mark

.btn--light
	@extend .btn
	border 1px solid $red
	background-color #ffffff
	color $red
	&:hover
		color white
		background: $red
	.nav-icon
		fill $mark

.btn--white
	@extend .btn
	border 1px solid rgba(255, 255, 255, 0.9)
	color rgba(255, 255, 255, 0.9)
	.nav-icon
		fill rgba(255, 255, 255, 0.9)

.btn--empty
	@extend .btn
	border 1px solid white
	color white
	background: none
	&:hover
		background: white
		color $red
.btn--icon
	flex(mid)

.btn--full
	width: 100%

.nav-icon
	size 20px
	display inline-block

.nav-icon--left
	margin-left 10px

.nav-icon--right
	margin-rihgt 10px

