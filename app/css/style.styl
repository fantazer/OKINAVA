	border-top 0
	flex-grow 1
.item__title
	@extend .type--xl
	font-weight:700
	margin-bottom: 15px
	link()
	line-height: 1.4
	display: inline
	width: auto
.item__descr
	+below(1024px)
		opacity:1!important
		left initial!important
		height: auto !important
		transform translateY(0)!important
		margin: 15px 0!important
