.item__footer
	flex(between)
	margin-top: auto
.item__price
	@extend .type--xl
	font-weight 700
//.item__weight
.item__get
	+below(640px)
		width: 90px
.item__btn
	+below(640px)
		padding: 10px
		width: 100%
	@extend .btn--md
	@extend .btn--light
	font-weight: 700
	color black
	padding: 10px 25px
	width: 100px


