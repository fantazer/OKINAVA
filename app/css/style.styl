		fill $red

.sale-list
	+below(960px)
		grid-template-columns repeat(2,1fr)
	+below(480px)
		grid-template-columns 1fr
		margin-bottom: 40px
	display: grid
	grid-gap 30px
	grid-template-columns repeat(3,1fr)
	margin-bottom: 65px

.sale-list__el
	+below(1024px)
		padding: 25% 10%
	bg-full()
	padding: 20% 10%
	position: relative
	border-radius 30px
	overflow: hidden
.sale-list__el-title
	f()
	align-items: stretch
	position: absolute
	padding: 30px
	width: 100%
	height: 100%
	left 0
	top 0
	up()
	span
		margin-top: auto
		color white
		font-weight: 700
		line-height: 1.6

